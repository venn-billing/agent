{:tasks {:requires ([babashka.fs :as fs]
                    [babashka.tasks :refer [shell]])

         dev     {:doc  "starts a dev environment and repl"
                  :task (clojure {:dir "."} "-M:dev:repl")}

         test     {:doc  "starts a test environment and repl"
                   :task (clojure {:dir "."} "-M:test:repl")}

         poly:test {:doc "runs a tests under Polylith"
                    :task (clojure {:dir "."} "-M:poly test")}

         uberjar:agent   {:doc  "builds an uberjar for the agent "
                          :task (clojure {:dir "."} "-T:build uberjar :project agent")}}}
